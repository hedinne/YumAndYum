    link(rel="stylesheet", href="./assets/css/index.css")
    
    script.
      const toggleMenu = () => {
        document.getElementById('nav').classList.toggle('nav--active');
        document.getElementById('hamburger').classList.toggle('nav__hamburger--active');
      }
