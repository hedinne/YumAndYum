      .nav__bar
        a(href="./index.html").header__logoLink
          img(src="./assets/images/logotype.svg", alt="Yam and Yam logo").header__logo
        
        div(onClick="toggleMenu()", tabindex="0")#hamburger.nav__hamburger Drop Down Menu

      nav#nav.nav
        ul.nav__list
